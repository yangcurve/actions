{
  "name": "@yangcurve/actions",
  "description": "Server Action wrapper inspired by trpc.",
  "keywords": [
    "nextjs",
    "server-action",
    "tanstack-query"
  ],
  "version": "0.1.1",
  "license": "MIT",
  "author": "yangcurve <utsu0621@gmail.com>",
  "repository": "github:yangcurve/actions",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "transpile-configs": "bun build configs/*.config.ts --outdir ./ -e '*'",
    "postinstall": "bun run format",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "prebuild": "bun run lint",
    "preformat": "bun run transpile-configs",
    "format": "prettier -w .",
    "lint": "bun run format && eslint . --fix"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript-eslint": "^8.10.0"
  },
  "peerDependencies": {
    "@tanstack/react-query": "^5.59.14",
    "typescript": "latest",
    "zod": "^3.23.8"
  }
}
